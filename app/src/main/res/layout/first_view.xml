<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="Credit Card Helper"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textEntCrBlnce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter Card Balance ($)"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextCreBal"
            android:layout_width="202dp"
            android:layout_height="55dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewIntRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter Yearly Interest Rate(%)"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextEntIntRate"
            android:layout_width="202dp"
            android:layout_height="54dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewEntMinPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter Minimum Payment ($)"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextEntMinPay"
            android:layout_width="202dp"
            android:layout_height="52dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:layout_weight="0.14">

        <TextView
            android:id="@+id/textViewFinalCreCardBal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Final Card Balance ($)"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextFinlCrBal"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_weight="0.16"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMonthRem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Months Remaining"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextMonthRem"
            android:layout_width="202dp"
            android:layout_height="59dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:layout_weight="0.16">

        <TextView
            android:id="@+id/textViewIntPaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Interest Paid Will Be($)"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextIntPaid"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:text="COMPUTE"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:text="CLEAR"
        android:textSize="24sp" />

</LinearLayout>